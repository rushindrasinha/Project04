    <div class="content">
      <h1>Here is your Order!</h1>
      <a href="#" id="confirm" class="ui button blue massive">Bring it to me!</a>
    </div>
  </div>  

  <div id="menu" class="ui modal"></div>

</div><!-- grid -->


<% include ./partials/footer %>

