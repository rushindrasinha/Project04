<% include ./partials/head %>

<% include ./partials/header %>

<input type="hidden" value="<%= user.local._id %>">

<div class="ui grid centered">

  <div class="ui row">
    <h1><i class="user icon"></i> <%= user.local.firstname %>'s Page</h1>
    <a href="/profile" class="ui blue button"><i class="settings icon"></i>Settings</a>
    <a href="/logout" class="ui red button"><i class="sign out icon"></i>Logout</a>

    <h3>Welcome <b><span data-user-email="<%= user.local.email %>"><%= user.local.email %></span></b>, Here's your info</h3>
    <h5>Address: <%= user.local.street1 %>,
    <br><%= user.local.city %>, <%= user.local.zip %>, <%= user.local.state %>
    <br> Phone Number: <%= user.local.phone %></h5>

    <a href="#" id="order-food" class="ui button red massive">Get Food</a>

  </div>


  <div id="food" class="ui grid centered"></div>




      

      

